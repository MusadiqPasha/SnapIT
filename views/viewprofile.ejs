<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <script src="https://cdn.jsdelivr.net/gh/besrourms/zodiacsigns@latest/index.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="style_finalinterface.css" />
</head>

<body class="bg-black text-white min-h-screen flex flex-col items-center">
    <main class="w-full min-h-screen flex flex-col justify-between">
        <div class="navbar">
          <h1><a href="mainpage.html">SnapIT</a></h1>
            <ul>
                <li><a href="mainpage.html">Home</a></li> 
                <li><a href="signup.html">Sign Up</a></li>
                <li><a href="mainpage.html">Logout</a></li>
            </ul>
          </div>

        <div class="flex justify-center items-start mt-10 mb-10 w-full max-w-5xl">
            <div class="w-1/3 flex flex-col items-center">
                <h1 class="text-3xl mb-5">Welcome !</h1>
                <div class="w-36 h-36 mb-5">
                    <img src="images/def.png" alt="Profile Picture" class="rounded-full w-full h-full">
                </div>
                <h3 class="text-2xl"><%= user.username %></h3>
            </div>

            <div class="w-2/3 flex flex-wrap gap-4 p-5">
                <div class="flex items-center bg-purple-500 p-4 rounded-lg hover:bg-purple-800">
                    <label class="text-xl mr-2">Username:</label>
                    <span class="text-lg"><%= user.username %></span>
                </div>
                <div class="flex items-center bg-purple-500 p-4 rounded-lg hover:bg-purple-800">
                    <label class="text-xl mr-2">No of Friends:</label>
                    <span class="text-lg"><%= user.friends.length %></span>
                </div>
                <div class="flex items-center bg-purple-500 p-4 rounded-lg hover:bg-purple-800">
                    <label class="text-xl mr-2">Zodiac Sign:</label>
                    <span id="zodiacSign" class="text-lg"></span>
                </div>
                <div class="flex items-center bg-purple-500 p-4 rounded-lg hover:bg-purple-800">
                    <label class="text-xl mr-2">Email:</label>
                    <span class="text-lg"><%= user.email %></span>
                </div>
                <div class="flex items-center bg-purple-500 p-4 rounded-lg hover:bg-purple-800">
                    <label class="text-xl mr-2">Phone:</label>
                    <span class="text-lg"><%= user.phone %></span>
                </div>
                <div class="flex items-center bg-purple-500 p-4 rounded-lg hover:bg-purple-800">
                    <label class="text-xl mr-2">Date of Birth:</label>
                    <span class="text-lg"><%= user.dob %></span>
                </div>
                <div class="flex items-center bg-purple-500 p-4 rounded-lg hover:bg-purple-800">
                    <label class="text-xl mr-2">Gender:</label>
                    <span class="text-lg"><%= user.gender %></span>
                </div>
                <div class="flex items-center bg-purple-500 p-4 rounded-lg hover:bg-purple-800">
                    <label class="text-xl mr-2">Password:</label>
                    <span class="text-lg"><%= user.password %></span>
                </div>
                <div class="flex items-center bg-purple-500 p-4 rounded-lg hover:bg-purple-800">
                    <label class="text-xl mr-2">Location:</label>
                    <span class="text-lg"><%= user.location %></span>
                </div>
            </div>
        </div>

        <div class="w-full bg-black bg-gradient-to-b from-black to-black/50 p-5 flex justify-center space-x-40">
            <button id="chatbutton" class="w-10 h-10 bg-cover" style="background-image: url('images/chat.png');"></button>
            <button id="snapButton" class="w-10 h-10 bg-cover" style="background-image: url('images/snap.png');"></button>
            <button id="addUser" class="w-10 h-10 bg-cover" style="background-image: url('images/adduser.png');"></button>
            <button id="backButton" class="w-10 h-10 bg-cover" style="background-image: url('images/back.png');"></button>
        </div>
    </main>

    <script>
        document.getElementById('addUser').addEventListener('click', function () {
            window.location.href = '/searchresults';
        });

        document.getElementById('chatbutton').addEventListener('click', function () {
            window.location.href = '/chat';
        });

        document.getElementById('backButton').addEventListener('click', function () {
            window.location.href = 'finalInterface.html';
        });

        document.getElementById('snapButton').addEventListener('click', function () {
            window.location.href = 'finalInterface.html';
        });

        const dob = '<%= user.dob %>'; // Assuming the date is formatted as 'YYYY-MM-DD'
        const zodiacSignElement = document.getElementById('zodiacSign');

        if (isValidDate(dob)) {
            const sign = new ZodiacSign(dob).sign;
            zodiacSignElement.textContent = sign;
        } else {
            zodiacSignElement.textContent = 'Invalid date';
        }

        function isValidDate(dateString) {
            const regex = /^\d{4}-\d{2}-\d{2}$/;
            return regex.test(dateString);
        }
    </script>
</body>

</html>
